@model IEnumerable<TOURTRADE.SysLoginTT.EN.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { Id = item.Id })" class="btn btn-success"> <i class="fas fa-edit"></i></a>
                    <a href="@Url.Action("Detail", new { Id = item.Id })" class="btn btn-info"> <i class="fas fa-eye"></i></a>
                    <a href="@Url.Action("Delete", new { Id = item.Id })" class="btn btn-danger"> <i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

